<!doctype html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Products</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-Zenh87qX5JnK2Jl0vWa8Ck2rdkQ2Bzep5IDxbcnCeuOxjzrPF/et3URy9Bv1WTRi" crossorigin="anonymous">
    <link rel="stylesheet" href="/products.css">
</head>

<body style="background-color: rgb(16, 14, 12)">
    <h1 class="text-center mt-5 text-white font-monospace text-capitalize">You can add the product of you want</h1>
    <!-- Form start -->
    <div class="container text-center mt-5">
        <div class="row">
            <div class="col">
                <form action="/products" method="post" class="text-center">
                    <div class="mb-3 text-center">
                        <label for="name" class="form-label text-white">Name Product</label>
                        <input type="text" name="name" class="form-control " id="name" required>
                    </div>
                    <div class="mb-3">
                        <label for="price" class="form-label text-white">Price</label>
                        <input type="number" name="price" class="form-control" id="price" required>
                    </div>
                    <div class="mb-3">
                        <label for="thumbnail" class="form-label text-white">URL Thumbnail</label>
                        <input type="url" name="thumbnail" class="form-control" id="img" required>
                    </div>
                    <button onclick="{sucess()}" type="submit" class="btn btn-success  me-5"
                        id="liveToastBtn">Save</button>
                    <button onclick="{goViewProducts()}" type="button" class="btn btn-warning ms-5">Go to
                        Products</button>
                </form>
                <p class="text-white mt-4 fw-light">Don't forget fill all the fields</p>
                <!-- Table  -->
                <% if(products.length==0){ %>
                    <div class="alert alert-danger" role="alert">
                        Product not found!
                    </div>
                    <% }else{ %>
                        <table class="table mt-5 container text-center  text-white">
                            <thead>
                                <tr>
                                    <th scope=" col">Name Product</th>
                                    <th scope="col">Price</th>
                                    <th scope="col">Picture</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% products.forEach((p)=> { %>
                                    <tr>
                                        <td>
                                            <%= p.name%>
                                        </td>
                                        <td>
                                            u$s <%= p.price%>
                                        </td>
                                        <td><img style="width: 40px ;" src=<%=p.thumbnail %> alt="<%= p.thumbnail %>">
                                        </td>
                                    </tr>
                                    <% }) %>
                            </tbody>
                        </table>
                        <% } %>
                            <!-- End Table -->

                            <div class="col">
                                <!-- start chat -->
                                <h1 class="mb-4 text-white">Demo Chat</h1>
                                <ul id="messageList"></ul>
                                <div class="input-group mb-3">
                                    <span class="input-group-text" ">@Correo</span>
                <input type=" email" class="form-control" name="mail" id="mail" aria-label="Username" required
                                        aria-describedby="basic-addon1">
                                </div>
                                <div class="input-group mb-5">
                                    <span class="input-group-text">Ingrese mensaje</span>
                                    <textarea class="form-control" name="message" id="message"
                                        aria-label="With textarea"></textarea>
                                    <button onclick="sendNewMessage()" type="button"
                                        class="btn btn-primary">Enviar</button>
                                </div>
                            </div>
            </div>
        </div>
        <!-- End Form -->
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-OERcA2EqjJCMA+/3y+gxIOqMEjwtxJY7qPCqsdltbNJuaOe923+mo//f6V8Qbsw3"
            crossorigin="anonymous"></script>
        <script>
            function goViewProducts() {
                window.location.href = "/products";
            }
        </script>
        <script>
            function sucess() {
                if (document.getElementById("name").value == "" || document.getElementById("price").value == "" || document.getElementById("img").value == "") {
                    alert("Please fill all the fields");
                } else {
                    alert("Product added successfully");
                }
            }
        </script>
        <script src="/socket.io/socket.io.js" charset="utf-8"></script>
        <script src="/main.js"></script>
</body>

</html>