<!doctype html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>View Products</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-Zenh87qX5JnK2Jl0vWa8Ck2rdkQ2Bzep5IDxbcnCeuOxjzrPF/et3URy9Bv1WTRi" crossorigin="anonymous">
</head>

<body style="background-color: rgb(39, 35, 29)">
    <div class="container text-center">
        <div class="row">
            <div class="col">
            </div>
            <div class="col">
                <h1 class="text-center mt-5 text-white font-monospace text-capitalize">Show Products</h1>
                <!-- Table  -->
                <% if(products.length==0){ %>
                    <div class="alert alert-danger" role="alert">
                        Product not found!
                    </div>
                    <% }else{ %>
                        <table class="table mt-5 container text-center  text-white">
                <thead>
                    <tr>
                        <th scope=" col">Name Product</th>
                            <th scope="col">Price</th>
                            <th scope="col">Picture</th>
                            </tr>
                            </thead>
                            <tbody>
                                <% products.forEach((p)=> { %>
                                    <tr>
                                        <td>
                                            <%= p.name%>
                                        </td>
                                        <td>
                                            u$s <%= p.price%>
                                        </td>
                                        <td><img style="width: 40px ;" src=<%=p.thumbnail %> alt="<%= p.thumbnail %>">
                                        </td>
                                    </tr>
                                    <% }) %>
                            </tbody>
                        </table>
                        <% } %>
                            <!-- End Table -->
                            <button class="btn btn-primary" onclick="{goProducts()}">Go Back</button>
            </div>
            <div class="col">
            </div>
        </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-OERcA2EqjJCMA+/3y+gxIOqMEjwtxJY7qPCqsdltbNJuaOe923+mo//f6V8Qbsw3"
        crossorigin="anonymous"></script>
    <script>
        function goProducts() {
            window.location.href = '/';
        }
    </script>
</body>

</html>